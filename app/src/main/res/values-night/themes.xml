<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Night Theme for DreamsTV - Optimized for low-light viewing -->
    <style name="Theme.DreamsTV" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors - slightly dimmed for night viewing -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryDark">@color/primary_blue</item>
        <item name="colorAccent">@color/secondary_cyan_light</item>
        
        <!-- Background colors - darker for night mode -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/background_dark</item>
        
        <!-- Text colors - softer for night viewing -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Status bar - transparent for immersive experience -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - dark for night mode -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Fullscreen support -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        
        <!-- Hardware acceleration -->
        <item name="android:hardwareAccelerated">true</item>
        
        <!-- Keep screen on during video playback -->
        <item name="android:windowKeepScreenOn">false</item>
    </style>
    
    <!-- Night Theme Overlays -->
    <style name="ThemeOverlay.DreamsTV.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/text_primary</item>
    </style>
    
    <!-- Night Card Theme -->
    <style name="ThemeOverlay.DreamsTV.Card" parent="">
        <item name="cardBackgroundColor">@color/background_medium</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    
</resources>