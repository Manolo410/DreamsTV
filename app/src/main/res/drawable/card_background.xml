<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_light" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/secondary_cyan" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_medium" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/primary_blue_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_medium" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/outline" />
        </shape>
    </item>
</selector>
